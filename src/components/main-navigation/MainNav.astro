---
import Logo from '@images/shared/desktop/logo-dark.png'
import NavLinks from '../nav-links/NavLinks.astro'
import IconBurger from '@images/shared/mobile/icon-hamburger.svg'
---

<nav>
  <a href="/">
    <img class="main-nav-logo" src={Logo.src} alt="Site logo" />
  </a>

  <div class="main-nav-ctn">
    <NavLinks />
  </div>

  <img class="menu-icon" src={IconBurger.src} alt="open icon" />
</nav>

<style>
  nav {
    align-items: center;
    display: flex;
    justify-content: space-between;
    margin: 4rem var(--page-margin);
    max-width: var(--page-container-size);
  }

  nav img.main-nav-logo {
    height: auto;
    width: 12.5rem;
    aspect-ratio: auto;
  }

  nav ul {
    display: flex;
    gap: 2.6rem;
  }

  nav ul li a {
    text-transform: uppercase;
  }

  .menu-icon {
    display: none;
  }

  @media screen and (max-width: 70rem) {
    nav {
      margin-inline: var(--tablet-page-margin);
    }
  }

  @media screen and (max-width: 40rem) {
    nav {
      margin-block: 2rem;
    }

    .main-nav-ctn {
      display: none;
    }

    .menu-icon {
      cursor: pointer;
      display: block;
      width: 1.5rem;
      height: auto;
      aspect-ratio: 1/1;
    }
  }
</style>
