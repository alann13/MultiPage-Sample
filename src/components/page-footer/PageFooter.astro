---
import './page-footer.css'
import Logo from '@images/shared/desktop/logo-light.png'
import IconFB from '@images/shared/desktop/icon-facebook.svg'
import IconYoutube from '@images/shared/desktop/icon-youtube.svg'
import IconTwitter from '@images/shared/desktop/icon-twitter.svg'
import IconPinterest from '@images/shared/desktop/icon-pinterest.svg'
import IconIG from '@images/shared/desktop/icon-instagram.svg'
import NavLinks from '../nav-links/NavLinks.astro'
---

<footer>
  <div class="content-ctn">
    <nav class="footer-nav">
      <a href="/">
        <img src={Logo.src} alt="Site logo" />
      </a>
      <NavLinks />
    </nav>

    <div class="lower-footer-ctn">
      <section>
        <h2>designo central office</h2>
        <address>3886 wellington street<br />Toronto, Ontario M9C 3J5</address>
      </section>
      <section>
        <h2>contact us (central office)</h2>
        <tel>+1 253-863-8967</tel><br />
        <a class="footer-email" href="mailto:someone@example.com"
          >contact@designo.co</a
        >
      </section>
      <ul class="footer-icon-list">
        <li>
          <a href="#">
            <img src={IconFB.src} alt="facebook icon" />
          </a>
        </li>
        <li>
          <a href="#">
            <img src={IconYoutube.src} alt="youtube icon" />
          </a>
        </li>
        <li>
          <a href="#">
            <img src={IconTwitter.src} alt="x icon" />
          </a>
        </li>
        <li>
          <a href="#">
            <img src={IconPinterest.src} alt="pinterest icon" />
          </a>
        </li>
        <li>
          <a href="#">
            <img src={IconIG.src} alt="instagram icon" />
          </a>
        </li>
      </ul>
    </div>
  </div>
</footer>
